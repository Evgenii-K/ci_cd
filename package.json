{
  "name": "ci_cd",
  "version": "1.0.0",
  "description": "Test GitHub Actions Deploy",
  "homepage": "https://evgenii-k.github.io/ci_cd",
  "main": "index.js",
  "scripts": {
    "serve": "browser-sync start --server src --no-notify --no-ui --cwd src --files index.html,styles/**/*",
    "test": "mocha ./tests/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --ext .",
    "build": "parcel build src/index.html --out-dir build --public-url ./",
    "deploy": "npm run build && gh-pages -d dist --remote my-github"
  },
  "keywords": [
    "github-actions"
  ],
  "author": "Evgeny Klimov",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "eslint": "^8.3.0",
    "mocha": "^9.1.3",
    "parcel-bundler": "1.9.7"
  }
}
